<mvc:View controllerName="openui5-flatpickr-demo.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:df="it.designfuture.flatpickr">
	<App>
		<pages>
			<Page title="openui5-flatpickr-demo">
				<content>
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example1Title}" />
							</Toolbar>
						</headerToolbar>
						<df:FlatDatePicker 
							class="sapUiMediumMargin"
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y"
						/>
					</Panel>
					
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example2Title}" />
							</Toolbar>
						</headerToolbar>
						<df:FlatDatePicker 
							class="sapUiMediumMargin"
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y"
							onChange="handleOnChangeEvent"
						/>
					</Panel>
					
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example3Title}" />
							</Toolbar>
						</headerToolbar>
						<df:FlatDatePicker 
							class="sapUiMediumMargin"
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y H:i"
							dateValue="{temp>/bindableDate}"
						/>
					</Panel>
					
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example4Title}" />
							</Toolbar>
						</headerToolbar>
						
						<df:FlatDatePicker 
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y"
							class="sapUiMediumMargin"
							mode="range"
						/>
					</Panel>
					
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example5Title}" />
							</Toolbar>
						</headerToolbar>
						
						<df:FlatDatePicker 
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y H:i"
							class="sapUiMediumMargin"
							hourValue="11"
							minuteValue="12"
							enableTime="true"
						/>
					</Panel>
					
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example6Title}" />
							</Toolbar>
						</headerToolbar>
						
						<df:FlatDatePicker 
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y H:i"
							class="sapUiMediumMargin"
							enableTime="true"
							mode="range"
						/>
					</Panel>
					
					<Panel>
						<headerToolbar>
							<Toolbar>
								<Title level="H2" text="{i18n>example7Title}" />
							</Toolbar>
						</headerToolbar>
						
						<df:FlatDatePicker 
							width="40%"
							clickOpens="false"
							dateFormat="d/m/Y H:i"
							class="sapUiMediumMargin"
							disabledDates="{temp>/disabledDates}"
						/>
					</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>